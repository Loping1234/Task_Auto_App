                            <a href="/logout" class="nav-link text-danger" onclick="return confirmLogout()">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </a>
                        </div>
    </div>

    <main class="main-content">
        <div class="container-fluid p-0">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h1 class="h3 fw-bold mb-1">
                        <i class="fas fa-columns me-2 text-primary"></i>Task Board
                    </h1>
                    <p class="text-muted small mb-0">Drag and drop tasks to update their status</p>
                </div>
                <div class="d-flex gap-2">
                    <button id="themeToggle" class="btn btn-light border rounded-pill px-3" title="Toggle Dark Mode">
                        <i class="fas fa-moon"></i>
                    </button>
                    <a href="/existingtasks" class="btn btn-outline-secondary rounded-pill px-3">
                        <i class="fas fa-list me-1"></i> List View
                    </a>
                </div>
            </div>

            <div class="kanban-board">
                <!-- Pending Column -->
                <div class="kanban-column pending">
                    <div class="kanban-column-header">
                        <span><i class="fas fa-clock me-2"></i>Pending</span>
                        <span class="task-count">
                            <%= pendingTasks.length %>
                        </span>
                    </div>
                    <div class="kanban-cards" data-status="Pending">
                        <% if (pendingTasks.length===0) { %>
                            <div class="empty-column">
                                <i class="fas fa-inbox d-block"></i>
                                <span>No pending tasks</span>
                            </div>
                            <% } else { %>
                                <% pendingTasks.forEach(function(task) { %>
                                    <div class="kanban-card" data-id="<%= task._id %>">
                                        <div class="card-title">
                                            <a href="/taskDetails/<%= task._id %>">
                                                <%= task.title %>
                                            </a>
                                        </div>
                                        <div class="card-meta">
                                            <% if (task.assigneeEmail) { %>
                                                <span class="meta-badge assignee">
                                                    <i class="fas fa-user"></i>
                                                    <%= task.assigneeEmail.split('@')[0] %>
                                                </span>
                                                <% } %>
                                                    <% if (task.teamName) { %>
                                                        <span class="meta-badge team">
                                                            <i class="fas fa-users"></i>
                                                            <%= task.teamName %>
                                                        </span>
                                                        <% } %>
                                                            <% if (task.endDate) { %>
                                                                <span
                                                                    class="meta-badge <%= new Date(task.endDate) < new Date() ? 'overdue' : 'deadline' %>">
                                                                    <i class="fas fa-calendar"></i>
                                                                    <%= new Date(task.endDate).toLocaleDateString() %>
                                                                </span>
                                                                <% } %>
                                        </div>
                                    </div>
                                    <% }); %>
                                        <% } %>
                    </div>
                </div>

                <!-- In Progress Column -->
                <div class="kanban-column inprogress">
                    <div class="kanban-column-header">
                        <span><i class="fas fa-spinner me-2"></i>In Progress</span>
                        <span class="task-count">
                            <%= inProgressTasks.length %>
                        </span>
                    </div>
                    <div class="kanban-cards" data-status="inprogress">
                        <% if (inProgressTasks.length===0) { %>
                            <div class="empty-column">
                                <i class="fas fa-inbox d-block"></i>
                                <span>No tasks in progress</span>
                            </div>
                            <% } else { %>
                                <% inProgressTasks.forEach(function(task) { %>
                                    <div class="kanban-card" data-id="<%= task._id %>">
                                        <div class="card-title">
                                            <a href="/taskDetails/<%= task._id %>">
                                                <%= task.title %>
                                            </a>
                                        </div>
                                        <div class="card-meta">
                                            <% if (task.assigneeEmail) { %>
                                                <span class="meta-badge assignee">
                                                    <i class="fas fa-user"></i>
                                                    <%= task.assigneeEmail.split('@')[0] %>
                                                </span>
                                                <% } %>
                                                    <% if (task.teamName) { %>
                                                        <span class="meta-badge team">
                                                            <i class="fas fa-users"></i>
                                                            <%= task.teamName %>
                                                        </span>
                                                        <% } %>
                                                            <% if (task.endDate) { %>
                                                                <span
                                                                    class="meta-badge <%= new Date(task.endDate) < new Date() ? 'overdue' : 'deadline' %>">
                                                                    <i class="fas fa-calendar"></i>
                                                                    <%= new Date(task.endDate).toLocaleDateString() %>
                                                                </span>
                                                                <% } %>
                                        </div>
                                    </div>
                                    <% }); %>
                                        <% } %>
                    </div>
                </div>

                <!-- Completed Column -->
                <div class="kanban-column completed">
                    <div class="kanban-column-header">
                        <span><i class="fas fa-check-circle me-2"></i>Completed</span>
                        <span class="task-count">
                            <%= completedTasks.length %>
                        </span>
                    </div>
                    <div class="kanban-cards" data-status="completed">
                        <% if (completedTasks.length===0) { %>
                            <div class="empty-column">
                                <i class="fas fa-inbox d-block"></i>
                                <span>No completed tasks</span>
                            </div>
                            <% } else { %>
                                <% completedTasks.forEach(function(task) { %>
                                    <div class="kanban-card" data-id="<%= task._id %>">
                                        <div class="card-title">
                                            <a href="/taskDetails/<%= task._id %>">
                                                <%= task.title %>
                                            </a>
                                        </div>
                                        <div class="card-meta">
                                            <% if (task.assigneeEmail) { %>
                                                <span class="meta-badge assignee">
                                                    <i class="fas fa-user"></i>
                                                    <%= task.assigneeEmail.split('@')[0] %>
                                                </span>
                                                <% } %>
                                                    <% if (task.teamName) { %>
                                                        <span class="meta-badge team">
                                                            <i class="fas fa-users"></i>
                                                            <%= task.teamName %>
                                                        </span>
                                                        <% } %>
                                                            <% if (task.endDate) { %>
                                                                <span class="meta-badge deadline">
                                                                    <i class="fas fa-calendar"></i>
                                                                    <%= new Date(task.endDate).toLocaleDateString() %>
                                                                </span>
                                                                <% } %>
                                        </div>
                                    </div>
                                    <% }); %>
                                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@1.15.0/Sortable.min.js"></script>
    <script src="/js/dark-theme.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Initialize SortableJS for each column
            const columns = document.querySelectorAll('.kanban-cards');

            columns.forEach(function (column) {
                new Sortable(column, {
                    group: 'tasks',
                    animation: 150,
                    ghostClass: 'sortable-ghost',
                    chosenClass: 'sortable-chosen',
                    dragClass: 'sortable-drag',
                    onEnd: async function (evt) {
                        const taskId = evt.item.dataset.id;
                        const newStatus = evt.to.dataset.status;

                        // Remove empty state if exists
                        const emptyState = evt.to.querySelector('.empty-column');
                        if (emptyState) {
                            emptyState.remove();
                        }

                        // Add empty state to source if now empty
                        if (evt.from.children.length === 0) {
                            evt.from.innerHTML = `
                                <div class="empty-column">
                                    <i class="fas fa-inbox d-block"></i>
                                    <span>No tasks here</span>
                                </div>
                            `;
                        }

                        // Update task count badges
                        updateTaskCounts();

                        // Send update to server
                        try {
                            const response = await fetch('/update-status/' + taskId, {
                                method: 'POST',
                                headers: { 'Content-Type': 'application/json' },
                                body: JSON.stringify({ status: newStatus })
                            });

                            if (!response.ok) {
                                throw new Error('Failed to update status');
                            }
                        } catch (error) {
                            console.error('Error updating task status:', error);
                            alert('Failed to update task status. Please refresh the page.');
                        }
                    }
                });
            });

            function updateTaskCounts() {
                document.querySelectorAll('.kanban-column').forEach(function (column) {
                    const cards = column.querySelectorAll('.kanban-card');
                    const countBadge = column.querySelector('.task-count');
                    if (countBadge) {
                        countBadge.textContent = cards.length;
                    }
                });
            }
        });

        function confirmLogout() {
            return confirm("Are you sure you want to log out?");
        }
    </script>
</body>

</html>