<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Assign Task | TaskApp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <link href="https://cdn.quilljs.com/1.3.6/quill.snow.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/dark-theme.css">
    <link rel="stylesheet" href="/css/dark-theme-quill.css">
    <style>
        :root {
            --sidebar-width: 260px;
            --secondary-color: #1e293b;
        }

        body {
            background-color: #f8fafc;
            font-family: 'Inter', sans-serif;
        }

        .sidebar {
            width: var(--sidebar-width);
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            background-color: var(--secondary-color);
            color: white;
            padding: 24px;
            z-index: 1000;
        }

        .sidebar-brand {
            font-size: 24px;
            font-weight: 700;
            margin-bottom: 32px;
            display: flex;
            align-items: center;
            gap: 12px;
            color: #fff;
            text-decoration: none;
        }

        .nav-link {
            color: #cbd5e1;
            padding: 12px 16px;
            border-radius: 8px;
            margin-bottom: 8px;
            display: flex;
            align-items: center;
            gap: 12px;
            transition: all 0.3s;
        }

        .nav-link:hover,
        .nav-link.active {
            background-color: rgba(255, 255, 255, 0.1);
            color: white;
        }

        .main-content {
            margin-left: var(--sidebar-width);
            padding: 40px;
        }

        .form-card {
            border: none;
            border-radius: 16px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
        }

        .ql-container {
            border-bottom-left-radius: 8px;
            border-bottom-right-radius: 8px;
            background: #fff;
        }

        .ql-toolbar {
            border-top-left-radius: 8px;
            border-top-right-radius: 8px;
            background: #f8fafc;
        }

        #descriptionEditor {
            min-height: 80px;
            margin-bottom: 50px;
        }

        .required-star {
            color: #ef4444;
        }

        .logout-btn {
            position: absolute;
            bottom: 24px;
            left: 24px;
            right: 24px;
        }
    </style>
</head>

<body>

    <% if (user.role==='subadmin' ) { %>
        <div class="sidebar">
            <a href="/dashboard" class="sidebar-brand text-white">
                <i class="fas fa-check-double text-primary"></i>
                <span>TaskApp</span>
            </a>
            <nav class="nav flex-column mt-4">
                <a href="/dashboard" class="nav-link">
                    <i class="fas fa-home"></i> Dashboard
                </a>
                <a href="/existingtasks" class="nav-link">
                    <i class="fas fa-tasks"></i> All Tasks
                </a>
                <a href="/view-teams" class="nav-link">
                    <i class="fas fa-users"></i> Teams
                </a>
                <a href="/assign" class="nav-link active">
                    <i class="fas fa-plus-circle"></i> Assign Task
                </a>
                <a href="/view-emp" class="nav-link">
                    <i class="fas fa-users-cog"></i> Employees
                </a>
                <a href="/taskboard" class="nav-link">
                    <i class="fas fa-columns"></i> Task Board
                </a>
                <a href="/admin-subadmin-chat" class="nav-link">
                    <i class="fas fa-comments"></i> Chat
                </a>
            </nav>
            <div class="logout-btn">
                <a href="/logout" class="nav-link text-danger" onclick="return confirmLogout()">
                    <i class="fas fa-sign-out-alt"></i> Logout
                </a>
            </div>
        </div>
        <% } %>
            <% if (user.role==='admin' ) { %>
                <div class="sidebar">
                    <a href="/dashboard" class="sidebar-brand text-white">
                        <i class="fas fa-shield-alt text-primary"></i>
                        <span>Admin Panel</span>
                    </a>
                    <nav class="nav flex-column mt-4">
                        <a href="/dashboard" class="nav-link">
                            <i class="fas fa-home"></i> Dashboard
                        </a>
                        <a href="/admin/team/manage" class="nav-link">
                            <i class="fas fa-users-cog"></i> Team Management
                        </a>
                        <a href="/assign" class="nav-link active">
                            <i class="fas fa-plus-circle"></i> Assign Task
                        </a>
                        <a href="/viewsubadm" class="nav-link">
                            <i class="fas fa-user-shield"></i> Sub-admins
                        </a>
                        <a href="/view-emp" class="nav-link">
                            <i class="fas fa-users"></i> Employees
                        </a>
                        <a href="/taskboard" class="nav-link">
                            <i class="fas fa-columns"></i> Task Board
                        </a>
                        <a href="/admin-subadmin-chat" class="nav-link">
                            <i class="fas fa-comments"></i> Chat
                        </a>
                    </nav>
                    <div class="logout-btn">
                        <a href="/logout" class="nav-link text-danger" onclick="return confirmLogout()">
                            <i class="fas fa-sign-out-alt"></i> Logout
                        </a>
                    </div>
                </div>
                <% } %>


                    <main class="main-content">
                        <header class="mb-5 d-flex justify-content-between align-items-center">
                            <div>
                                <h1 class="h3 fw-bold mb-1">Assign New Task</h1>
                                <p class="text-muted mb-0">Fill in the details to delegate a task to an employee</p>
                            </div>
                            <div class="d-flex align-items-center gap-3">
                                <button id="themeToggle" class="btn btn-link nav-link p-0" title="Toggle Dark Mode">
                                    <i class="fas fa-moon fs-5"></i>
                                </button>
                            </div>
                        </header>

                        <div class="card form-card bg-white p-4">
                            <form method="POST" action="/assign" enctype="multipart/form-data" class="needs-validation"
                                novalidate>
                                <div class="row g-4">
                                    <!-- Title -->
                                    <div class="col-12">
                                        <label for="title" class="form-label fw-semibold">Task Title <span
                                                class="required-star">*</span></label>
                                        <input type="text" class="form-control px-3 py-2 text-white id=" title"
                                            name="title" placeholder="What needs to be done?" required>
                                    </div>

                                    <!-- Description -->
                                    <div class="col-12 mb-5">
                                        <label class="form-label fw-semibold">Description</label>
                                        <div id="descriptionEditor"></div>
                                        <textarea id="description" name="description" class="d-none"></textarea>
                                    </div>

                                    <!-- Dates -->
                                    <div class="col-md-6">
                                        <label for="startDate" class="form-label fw-semibold">Start Date</label>
                                        <input type="date" class="form-control px-3 py-2" id="startDate"
                                            name="startDate">
                                    </div>
                                    <div class="col-md-6">
                                        <label for="endDate" class="form-label fw-semibold">End Date (Deadline)</label>
                                        <input type="date" class="form-control px-3 py-2" id="endDate" name="endDate">
                                    </div>
                                    <!-- Status & Assignee -->
                                    <div class="col-md-6">
                                        <label for="status" class="form-label fw-semibold">Initial Status</label>
                                        <select class="form-select px-3 py-2" id="status" name="status">
                                            <option value="Pending">Pending</option>
                                            <option value="inprogress">In Progress</option>
                                            <option value="completed">Completed</option>
                                        </select>
                                    </div>
                                    <div class="col-md-6">
                                        <label for="assignee" class="form-label fw-semibold">Assign To <span
                                                class="required-star">*</span></label>
                                        <select class="form-select px-3 py-2" id="assignee" name="assigneeEmail"
                                            required>
                                            <option value="">Select Employee</option>
                                            <%- options %>
                                        </select>
                                    </div>
                                    <!-- Image -->
                                    <div class="col-12">
                                        <label for="image" class="form-label fw-semibold">Attachment (Optional)</label>
                                        <input type="file" class="form-control px-3 py-2" id="image" name="image"
                                            accept="image/*">
                                        <div class="form-text small">Upload an image or document relevant to the task.
                                        </div>
                                    </div>
                                    <!-- Actions -->
                                    <div class="col-12 mt-5">
                                        <div class="d-flex gap-3">
                                            <button type="submit"
                                                class="btn btn-primary px-4 py-2 rounded-pill shadow-sm">
                                                <i class="fas fa-paper-plane me-2"></i> Assign Task
                                            </button>
                                            <% if (user.role==='subadmin' ) { %>
                                                <a href="/dashboard"
                                                    class="btn btn-light border px-4 py-2 rounded-pill">
                                                    Cancel
                                                </a>
                                                <% } else { %>
                                                    <a href="/dashboard"
                                                        class="btn btn-light border px-4 py-2 rounded-pill">
                                                        Cancel
                                                    </a>
                                                    <% } %>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </main>

                    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
                    <script src="/js/dark-theme.js"></script>
                    <script src="https://cdn.quilljs.com/1.3.6/quill.js"></script>
                    <script>
                        const descriptionQuill = new Quill('#descriptionEditor', {
                            theme: 'snow',
                            modules: {
                                toolbar: [
                                    ['bold', 'italic', 'underline', 'strike'],
                                    [{ header: [1, 2, 3, false] }],
                                    [{ list: 'ordered' }, { list: 'bullet' }],
                                    [{ color: [] }, { background: [] }],
                                    ['link'],
                                    ['clean']
                                ]
                            },
                            placeholder: 'Provide more context and instructions here...'
                        });
                        const form = document.querySelector('form');
                        form.addEventListener('submit', function (e) {
                            const descHTML = descriptionQuill.root.innerHTML;
                            document.getElementById('description').value = descHTML;
                        });


                        function confirmLogout() {
                            return confirm("Are you sure you want to log out?");
                        }
                    </script>
</body>

</html>