<!DOCTYPE html>
<html lang="en">
    <!-- Main Task Details Content -->
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card detail-card p-4 mb-4">
                    <h1 class="h3 fw-bold mb-3 text-dark"><%= task.title %></h1>
                    <h5 class="fw-bold mb-3 d-flex align-items-center gap-2">
                        <i class="fas fa-align-left text-primary small"></i> Description
                    </h5>
                    <div class="text-secondary lh-lg mb-4">
                        <%- task.description || '<span class="text-muted fst-italic">No description provided.</span>' %>
                    </div>
                    <h5 class="fw-bold mb-3 d-flex align-items-center gap-2">
                        <i class="fas fa-image text-primary small"></i> Attachment
                    </h5>
                    <% if (task.image) { %>
                        <img src="/task-img/<%= task._id %>" alt="<%= task.title %>" class="task-image mb-2">
                    <% } else { %>
                        <div class="text-center py-4 bg-light rounded-3">
                            <i class="fas fa-file-upload fs-2 text-muted opacity-25 mb-2 d-block"></i>
                            <span class="text-muted small">No images attached</span>
                        </div>
                    <% } %>
                    <div class="row mt-4">
                        <div class="col-md-6">
                            <label class="form-label small fw-bold text-muted text-uppercase mb-2">Start Date</label>
                            <div class="p-2 bg-light rounded small text-center"><%= task.startDate ? new Date(task.startDate).toLocaleDateString() : 'N/A' %></div>
                        </div>
                        <div class="col-md-6">
                            <label class="form-label small fw-bold text-muted text-uppercase mb-2">End Date</label>
                            <div class="p-2 bg-light rounded small text-center"><%= task.endDate ? new Date(task.endDate).toLocaleDateString() : 'N/A' %></div>
                        </div>
                    </div>
                    <div class="mt-4">
                        <label class="form-label small fw-bold text-muted text-uppercase mb-2">Status</label>
                        <div class="p-2 bg-light rounded small text-center"><%= task.status %></div>
                    </div>
                </div>
                                <!-- Comment Form at the bottom -->
                                <% if (typeof commentSuccess !== 'undefined' && commentSuccess) { %>
                                    <div class="alert alert-success">Comment submitted successfully!</div>
                                <% } %>
                <div class="card detail-card p-4 mb-4 mt-5">
                    <h5 class="fw-bold mb-3 text-dark">Add a Comment</h5>
                    <form action="/task/<%= task._id %>/comment" method="POST" enctype="multipart/form-data">
                        <div class="mb-3">
                            <label for="commentText" class="form-label">Comment</label>
                            <textarea id="commentText" name="text" class="form-control" rows="3" placeholder="Write your comment here..." required></textarea>
                        </div>
                        <div class="mb-3">
                            <label for="commentImage" class="form-label">Attach Image (optional)</label>
                            <input type="file" id="commentImage" name="image" accept="image/*" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit Comment</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
