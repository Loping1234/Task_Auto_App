<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Team Management | TaskApp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>
        :root {
            --sidebar-width: 260px;
            --primary-color: #4f46e5;
            --secondary-color: #1e293b;
        }
        body {
            background-color: #f8fafc;
            font-family: 'Inter', sans-serif;
        }
        .sidebar {
            width: var(--sidebar-width);
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            background-color: var(--secondary-color);
            color: white;
            padding: 24px;
            z-index: 1000;
        }
        .sidebar-brand {
            font-size: 24px;
            font-weight: 700;
            margin-bottom: 32px;
            display: flex;
            align-items: center;
            gap: 12px;
            color: #fff;
            text-decoration: none;
        }
        .nav-link {
            color: #cbd5e1;
            padding: 12px 16px;
            border-radius: 8px;
            margin-bottom: 8px;
            display: flex;
            align-items: center;
            gap: 12px;
            transition: all 0.3s;
        }
        .nav-link:hover, .nav-link.active {
            background-color: rgba(255, 255, 255, 0.1);
            color: white;
        }
        .main-content {
            margin-left: var(--sidebar-width);
            padding: 40px;
        }
        .stat-card {
            border: none;
            border-radius: 16px;
            padding: 24px;
            transition: transform 0.3s;
        }
        .stat-card:hover {
            transform: translateY(-5px);
        }
        .icon-box {
            width: 56px;
            height: 56px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
        }
        .logout-btn {
            position: absolute;
            bottom: 24px;
            left: 24px;
            right: 24px;
        }
        .team-list-card {
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.05);
            padding: 20px;
        }
        .team-table th, .team-table td {
            vertical-align: middle;
        }
        .team-table th {
            background-color: var(--primary-color);
            color: white;
        }
        .team-table tbody tr:hover {
            background-color: #f1f5f9;
        }
        .employee-emails {
            white-space: pre-wrap;
            font-size: 0.9em;
        }
    </style>
</head>

<body>
    <div class="sidebar">
        <a href="/admin-dashboard" class="sidebar-brand text-white">
            <i class="fas fa-shield-alt text-primary"></i>
            <span>Admin Panel</span>
        </a>
        <nav class="nav flex-column mt-4">
            <a href="/admin-dashboard" class="nav-link">
                <i class="fas fa-home"></i> Dashboard
            </a>
            <a href="/admin/team/manage" class="nav-link active">
                <i class="fas fa-users"></i> Team Management
            </a>
            <a href="/viewsubadm" class="nav-link">
                <i class="fas fa-users-cog"></i> Sub-admin Management
            </a>
            <a href="/view-emp" class="nav-link">
                <i class="fas fa-users"></i> Employees
            </a>
            <a href="/admin-subadmin-chat" class="nav-link">
                <i class="fas fa-comments"></i> Admin/Sub-admin Chat
            </a>
        </nav>
        <div class="logout-btn">
            <a href="/logout" class="nav-link text-danger" onclick="return confirmLogout()">
                <i class="fas fa-sign-out-alt"></i> Logout
            </a>
        </div>
    </div>
    <main class="main-content">
        <div class="row">
            <div class="col-12">
                <h2 class="mb-4">Team Management</h2>
            </div>
            <div class="col-lg-4 mb-4">
                <div class="card team-list-card">
                    <div class="card-header bg-white border-0 pb-0">
                        <h5 class="mb-0 fw-bold">Create New Team</h5>
                    </div>
                    <div class="card-body">
                        <form action="/admin/team/create" method="POST">
                            <div class="mb-3">
                                <label for="teamName" class="form-label fw-bold">Team Name</label>
                                <input type="text" class="form-control" id="teamName" name="teamName" required>
                            </div>
                            <div class="mb-3">
                                <label for="subadminEmail" class="form-label fw-bold">Assign to Sub-admin</label>
                                <select class="form-select" id="subadminEmail" name="subadminEmail" required>
                                    <option value="">Select Sub-admin</option>
                                    <% subadmins.forEach((subadmin) => { %>
                                        <option value="<%= subadmin.email %>"><%= subadmin.email %></option>
                                    <% }); %>
                                </select>
                            </div>
                            <div class="mb-3">
                                <label for="employees" class="form-label fw-bold">Select Employees (Current Team: -)</label>
                                <select class="form-select" id="employees" name="employees" multiple size="8">
                                    <% employees.forEach((employee) => { %>
                                        <option value="<%= employee.email %>" <%= employee.teamName ? 'disabled' : '' %>><%= employee.email %> <%= employee.teamName ? `(In: ${employee.teamName})` : '' %></option>
                                    <% }); %>
                                </select>
                                <small class="text-muted">Hold Ctrl (Windows) or Command (Mac) to select multiple. Disabled employees are currently in a team.</small>
                            </div>
                            <button type="submit" class="btn btn-primary">Create Team</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-8 mb-4">
                <div class="card team-list-card">
                    <div class="card-header bg-white border-0 pb-0">
                        <h5 class="mb-0 fw-bold">Existing Teams</h5>
                    </div>
                    <div class="card-body">
                        <% if (teams.length === 0) { %>
                            <div class="text-center py-5">
                                <p class="text-muted">No teams created yet.</p>
                            </div>
                        <% } else { %>
                            <div class="table-responsive">
                                <table class="table team-table">
                                    <thead>
                                        <tr>
                                            <th>Team Name</th>
                                            <th>Sub-Admin</th>
                                            <th>Members</th>
                                            <th>Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% teams.forEach((team) => { %>
                                            <tr>
                                                <td><%= team.teamName %></td>
                                                <td><%= team.subadminEmail %></td>
                                                <td>
                                                    <span class="employee-emails">
                                                        <%= team.employees && team.employees.length > 0 ? team.employees.join(', ') : 'No members' %>
                                                    </span>
                                                </td>
                                                <td class="d-flex gap-2">
                                                    <a href="/admin/team/edit/<%= team.teamName %>" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i> Edit</a>
                                                    <form action="/admin/team/delete/<%= team.teamName %>" method="POST" onsubmit="return confirm('Are you sure you want to delete <%= team.teamName %>? This will unassign all employees and remove any team-assigned tasks.')">
                                                        <button type="submit" class="btn btn-sm btn-danger"><i class="fas fa-trash-alt"></i> Delete</button>
                                                    </form>
                                                </td>
                                            </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script>
        function confirmLogout() {
            return confirm("Are you sure you want to logout?");
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>