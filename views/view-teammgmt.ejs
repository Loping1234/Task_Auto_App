<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard | TaskApp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>
        :root {
            --sidebar-width: 260px;
            --primary-color: #4f46e5;
            --secondary-color: #1e293b;
        }
        body {
            background-color: #f8fafc;
            font-family: 'Inter', sans-serif;
        }
        .sidebar {
            width: var(--sidebar-width);
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            background-color: var(--secondary-color);
            color: white;
            padding: 24px;
            z-index: 1000;
        }
        .sidebar-brand {
            font-size: 24px;
            font-weight: 700;
            margin-bottom: 32px;
            display: flex;
            align-items: center;
            gap: 12px;
            color: #fff;
            text-decoration: none;
        }
        .nav-link {
            color: #cbd5e1;
            padding: 12px 16px;
            border-radius: 8px;
            margin-bottom: 8px;
            display: flex;
            align-items: center;
            gap: 12px;
            transition: all 0.3s;
        }
        .nav-link:hover, .nav-link.active {
            background-color: rgba(255, 255, 255, 0.1);
            color: white;
        }
        .main-content {
            margin-left: var(--sidebar-width);
            padding: 40px;
        }
        .stat-card {
            border: none;
            border-radius: 16px;
            padding: 24px;
            transition: transform 0.3s;
        }
        .stat-card:hover {
            transform: translateY(-5px);
        }
        .icon-box {
            width: 56px;
            height: 56px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 24px;
        }
        .logout-btn {
            position: absolute;
            bottom: 24px;
            left: 24px;
            right: 24px;
        }
        .subadmin-list {
            background: white;
            border-radius: 16px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.05);
            padding: 20px;
        }
        .subadmin-item {
            border-bottom: 1px solid #eee;
            padding: 15px 0;
            transition: all 0.3s;
        }
        .subadmin-item:hover {
            background-color: #f8f9fa;
            border-radius: 8px;
        }
        .subadmin-item:last-child {
            border-bottom: none;
        }
    </style>
</head>

<body>
        <div class="sidebar">
        <a href="/admin-dashboard" class="sidebar-brand text-white">
            <i class="fas fa-shield-alt text-primary"></i>
            <span>Admin Panel</span>
        </a>
        <nav class="nav flex-column mt-4">
            <a href="/admin-dashboard" class="nav-link">
                <i class="fas fa-home"></i> Dashboard
            </a>
            <a href="/view-teammgmt" class="nav-link active">
                <i class="fas fa-users"></i> Team Management
            </a>
            <a href="/viewsubadm" class="nav-link">
                <i class="fas fa-users-cog"></i> Sub-admin Management
            </a>
            <a href="/view-emp" class="nav-link">
                <i class="fas fa-users"></i> Employees
            </a>
        </nav>
        <div class="logout-btn">
            <a href="/logout" class="nav-link text-danger" onclick="return confirmLogout()">
                <i class="fas fa-sign-out-alt"></i> Logout
            </a>
        </div>
    </div>
    <main class="main-content">
    <div class="row mt-5">
            <div class="col-lg-12">
                <div class="card subadmin-list">
                    <div class="card-header bg-white border-0 pb-0">
                        <h5 class="mb-0 fw-bold">Team Management</h5>
                        <p class="text-muted small mb-0">Create and manage teams of employees</p>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <form action="/create-team" method="POST">
                                    <div class="mb-3">
                                        <label for="teamName" class="form-label fw-bold">Team Name</label>
                                        <input type="text" class="form-control" id="teamName" name="teamName" required>
                                    </div>
                                    <div class="mb-3">
                                        <label for="subadminEmail" class="form-label fw-bold">Assign to Sub-admin</label>
                                        <select class="form-select" id="subadminEmail" name="subadminEmail" required>
                                            <option value="">Select Sub-admin</option>
                                            <% subadmins.forEach((subadmin) => { %>
                                                <option value="<%= subadmin.email %>"><%= subadmin.email %></option>
                                            <% }); %>
                                        </select>
                                    </div>
                                    <div class="mb-3">
                                        <label for="employees" class="form-label fw-bold">Select Employees</label>
                                        <select class="form-select" id="employees" name="employees" multiple required>
                                            <% employees.forEach((employee) => { %>
                                                <option value="<%= employee.email %>"><%= employee.email %></option>
                                            <% }); %>
                                        </select>
                                        <small class="text-muted">Hold Ctrl (Windows) or Command (Mac) to select multiple employees.</small>
                                    </div>
                                    <button type="submit" class="btn btn-primary">Create Team</button>
                                </form>
                            </div>
                            <div class="col-md-6">
                                <h6 class="fw-bold mb-3">Existing Teams</h6>
                                <% if (teams.length === 0) { %>
                                    <div class="text-center py-3">
                                        <p class="text-muted">No teams created yet</p>
                                    </div>
                                <% } else { %>
                                    <% teams.forEach((team) => { %>
                                        <div class="card mb-3">
                                            <div class="card-body">
                                                <h6 class="card-title fw-bold"><%= team.teamName %></h6>
                                                <p class="card-text">
                                                    <small class="text-muted">Sub-admin: <%= team.subadminEmail %></small><br>
                                                    <small class="text-muted">Employees: <%= team.employees.join(', ') %></small>
                                                </p>
                                                <div class="d-flex gap-2">
                                                    <a href="/edit-team/<%= team._id %>" class="btn btn-sm btn-outline-primary">Edit</a>
                                                    <a href="/delete-team/<%= team._id %>" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this team?')">Delete</a>
                                                </div>
                                            </div>
                                        </div>
                                    <% }); %>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
    </main>
</body>