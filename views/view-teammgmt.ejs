<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Team Management | TaskApp</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <style>
        :root {
            --sidebar-width: 260px;
            --primary-color: #4f46e5;
            --secondary-color: #1e293b;
        }

        body {
            background-color: #f8fafc;
            font-family: 'Inter', sans-serif;
        }

        .sidebar {
            width: var(--sidebar-width);
            height: 100vh;
            position: fixed;
            left: 0;
            top: 0;
            background-color: var(--secondary-color);
            color: white;
            padding: 24px;
            z-index: 1000;
        }

        .sidebar-brand {
            font-size: 24px;
            font-weight: 700;
            margin-bottom: 32px;
            display: flex;
            align-items: center;
            gap: 12px;
            color: #fff;
            text-decoration: none;
        }

        .nav-link {
            color: #cbd5e1;
            padding: 12px 16px;
            border-radius: 8px;
            margin-bottom: 8px;
            display: flex;
            align-items: center;
            gap: 12px;
            transition: all 0.3s;
        }

        .nav-link:hover,
        .nav-link.active {
            background-color: rgba(255, 255, 255, 0.1);
            color: white;
        }

        .main-content {
            margin-left: var(--sidebar-width);
            padding: 40px;
        }

        .list-card {
            border: none;
            border-radius: 16px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
            background: white;
        }

        .logout-btn {
            position: absolute;
            bottom: 24px;
            left: 24px;
            right: 24px;
        }

        .employee-list-select {
            font-size: 0.9em;
        }

        .badge-member {
            font-size: 0.75em;
            margin-right: 4px;
        }
    </style>
</head>

<body>
    <div class="sidebar">
        <a href="/dashboard" class="sidebar-brand text-white">
            <i class="fas fa-shield-alt text-primary"></i>
            <span>Admin Panel</span>
        </a>
        <nav class="nav flex-column mt-4">
            <a href="/dashboard" class="nav-link">
                <i class="fas fa-home"></i> Dashboard
            </a>
            <a href="/admin/team/manage" class="nav-link active">
                <i class="fas fa-users-cog"></i> Team Management
            </a>
            <a href="/assign" class="nav-link">
                <i class="fas fa-plus-circle"></i> Assign Task
            </a>
            <a href="/viewsubadm" class="nav-link">
                <i class="fas fa-user-shield"></i> Sub-admins
            </a>
            <a href="/view-emp" class="nav-link">
                <i class="fas fa-users"></i> Employees
            </a>
            <a href="/admin-subadmin-chat" class="nav-link">
                <i class="fas fa-comments"></i> Chat
            </a>
        </nav>
        <div class="logout-btn">
            <a href="/logout" class="nav-link text-danger" onclick="return confirmLogout()">
                <i class="fas fa-sign-out-alt"></i> Logout
            </a>
        </div>
    </div>

    <main class="main-content">
        <header class="mb-5">
            <h1 class="h3 fw-bold mb-1">Team Management</h1>
            <p class="text-muted mb-0">Organize employees into teams and assign sub-admin coordinators</p>
        </header>

        <!-- Stats Row -->
        <div class="row g-4 mb-4">
            <div class="col-md-4">
                <div class="card bg-primary text-white border-0 shadow-sm rounded-4 h-100">
                    <div class="card-body p-4 d-flex align-items-center justify-content-between">
                        <div>
                            <h6 class="text-uppercase mb-1 opacity-75 small fw-bold">Total Teams</h6>
                            <h2 class="mb-0 fw-bold display-6">
                                <%= teams.length %>
                            </h2>
                        </div>
                        <div class="bg-white bg-opacity-25 p-3 rounded-circle">
                            <i class="fas fa-users fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-white border-0 shadow-sm rounded-4 h-100">
                    <div class="card-body p-4 d-flex align-items-center justify-content-between">
                        <div>
                            <h6 class="text-uppercase mb-1 text-muted small fw-bold">Total Members Assigned</h6>
                            <h2 class="mb-0 fw-bold display-6 text-dark">
                                <%= teams.reduce((acc, team)=> acc + (team.employees ? team.employees.length : 0), 0) %>
                            </h2>
                        </div>
                        <div class="bg-light p-3 rounded-circle text-primary">
                            <i class="fas fa-user-check fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card bg-white border-0 shadow-sm rounded-4 h-100">
                    <div class="card-body p-4 d-flex align-items-center justify-content-between">
                        <div>
                            <h6 class="text-uppercase mb-1 text-muted small fw-bold">Active Sub-admins</h6>
                            <h2 class="mb-0 fw-bold display-6 text-dark">
                                <%= subadmins.length %>
                            </h2>
                        </div>
                        <div class="bg-light p-3 rounded-circle text-success">
                            <i class="fas fa-user-shield fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row g-4">
            <!-- Create Team Column -->
            <div class="col-lg-4">
                <div class="card list-card p-4 h-100">
                    <div class="d-flex align-items-center mb-4">
                        <div class="bg-primary bg-opacity-10 p-2 rounded-circle me-3 text-primary">
                            <i class="fas fa-plus fa-lg"></i>
                        </div>
                        <h5 class="fw-bold mb-0">Create New Team</h5>
                    </div>
                    <form action="/create-team" method="POST">
                        <div class="mb-3">
                            <label for="teamName" class="form-label small fw-bold text-muted text-uppercase">Team
                                Name</label>
                            <input type="text" class="form-control bg-light border-0 py-2" id="teamName" name="teamName"
                                placeholder="e.g. Development Squad" required>
                        </div>
                        <div class="mb-3">
                            <label for="subadminEmail" class="form-label small fw-bold text-muted text-uppercase">Assign
                                Sub-Admin</label>
                            <select class="form-select bg-light border-0 py-2" id="subadminEmail" name="subadminEmail"
                                required>
                                <option value="">Select Coordinator...</option>
                                <% subadmins.forEach((subadmin)=> { %>
                                    <option value="<%= subadmin.email %>">
                                        <%= subadmin.email %>
                                    </option>
                                    <% }); %>
                            </select>
                        </div>
                        <div class="mb-4">
                            <label for="employees" class="form-label small fw-bold text-muted text-uppercase">Select
                                Members</label>
                            <div class="bg-light rounded-3 p-2 border">
                                <select class="form-select border-0 bg-transparent employee-list-select shadow-none"
                                    id="employees" name="employees" multiple size="8">
                                    <% employees.forEach((employee)=> { %>
                                        <option value="<%= employee.email %>" class="p-2 rounded mb-1">
                                            <%= employee.email %>
                                                <%= (employee.teams && employee.teams.length> 0) ? '(In: ' +
                                                    employee.teams.join(', ') + ')' : '' %>
                                        </option>
                                        <% }); %>
                                </select>
                            </div>
                            <div class="form-text xsmall mt-2"><i class="fas fa-info-circle me-1"></i> Hold Ctrl/Cmd to
                                select multiple members.</div>
                        </div>
                        <button type="submit" class="btn btn-primary w-100 py-2 rounded-pill shadow-sm fw-bold">
                            Create Team
                        </button>
                    </form>
                </div>
            </div>

            <!-- Existing Teams Column -->
            <div class="col-lg-8">
                <div class="card list-card p-0 h-100 overflow-hidden">
                    <div class="card-header bg-white p-4 border-bottom">
                        <div class="d-flex align-items-center justify-content-between">
                            <div class="d-flex align-items-center">
                                <div class="bg-success bg-opacity-10 p-2 rounded-circle me-3 text-success">
                                    <i class="fas fa-layer-group fa-lg"></i>
                                </div>
                                <h5 class="fw-bold mb-0">Existing Teams</h5>
                            </div>
                            <span class="badge bg-secondary rounded-pill">
                                <%= teams.length %> Active
                            </span>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light text-muted small text-uppercase">
                                <tr>
                                    <th class="ps-4 py-3">Team Name</th>
                                    <th class="py-3">Coordinator (Sub-admin)</th>
                                    <th class="py-3">Members</th>
                                    <th class="pe-4 py-3 text-end">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (teams.length===0) { %>
                                    <tr>
                                        <td colspan="4" class="text-center py-5 text-muted">
                                            <div class="mb-2"><i class="fas fa-users-slash fa-2x opacity-25"></i></div>
                                            No teams created yet.
                                        </td>
                                    </tr>
                                    <% } else { %>
                                        <% teams.forEach(team=> { %>
                                            <tr>
                                                <td class="ps-4 py-3">
                                                    <div class="fw-bold text-dark">
                                                        <%= team.teamName %>
                                                    </div>
                                                </td>
                                                <td class="py-3">
                                                    <div class="d-flex align-items-center">
                                                        <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center me-2"
                                                            style="width: 24px; height: 24px; font-size: 10px;">
                                                            <%= team.subadminEmail.charAt(0).toUpperCase() %>
                                                        </div>
                                                        <span class="small">
                                                            <%= team.subadminEmail %>
                                                        </span>
                                                    </div>
                                                </td>
                                                <td class="py-3">
                                                    <div class="d-flex align-items-center">
                                                        <span
                                                            class="badge bg-info bg-opacity-10 text-info rounded-pill border border-info border-opacity-25">
                                                            <%= team.employees ? team.employees.length : 0 %> Members
                                                        </span>
                                                    </div>
                                                </td>
                                                <td class="pe-4 py-3 text-end">
                                                    <div class="btn-group">
                                                        <a href="/edit-team/<%= team._id %>"
                                                            class="btn btn-outline-primary btn-sm rounded-start">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <a href="/delete-team/<%= team._id %>"
                                                            class="btn btn-outline-danger btn-sm rounded-end"
                                                            onclick="return confirm('Are you sure you want to delete this team?');">
                                                            <i class="fas fa-trash"></i>
                                                        </a>
                                                    </div>
                                                </td>
                                            </tr>
                                            <% }); %>
                                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <script>
        function confirmLogout() {
            return confirm("Are you sure you want to logout?");
        }
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>